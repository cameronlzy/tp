<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.FlowPane?>

<HBox xmlns:fx="http://javafx.com/fxml/1" id="cardPane" fx:id="cardPane" alignment="TOP_LEFT"
      minHeight="160" xmlns="http://javafx.com/javafx/17">
    <GridPane HBox.hgrow="ALWAYS" alignment="TOP_LEFT">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150"/>
        </columnConstraints>

        <VBox alignment="TOP_LEFT" minHeight="140" GridPane.columnIndex="0" spacing="6">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15"/>
            </padding>

            <HBox spacing="0.5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minWidth>
                </Label>
                <Label fx:id="name" styleClass="cell_big_label"/>
            </HBox>

            <!-- New tag row (total contract + athletes) -->
            <FlowPane fx:id="tagRow" hgap="8" vgap="8" alignment="CENTER_LEFT"/>

            <Label fx:id="phone" styleClass="cell_small_label"/>
            <Label fx:id="email" styleClass="cell_small_label"/>
        </VBox>
    </GridPane>
</HBox>
