@startuml
!include style.puml

' ==== Font & Layout Settings ====
' Balanced for readability and compactness
skinparam defaultFontSize 15
skinparam sequenceMessageFontSize 15
skinparam participantFontSize 17
skinparam noteFontSize 14
skinparam sequenceLifeLineFontSize 14
skinparam ArrowFontStyle plain

' Layout compression and width control
skinparam maxMessageSize 55
skinparam ParticipantPadding 10
skinparam BoxPadding 8
scale 1.0

' ==== Participants ====
box Logic LOGIC_COLOR_T1
participant "Logic\nManager" as LogicManager LOGIC_COLOR
participant "AddressBook\nParser" as AddressBookParser LOGIC_COLOR
participant "AddAthlete\nCommandParser" as AddAthleteCommandParser LOGIC_COLOR
participant "AddAthlete\nCommand" as AddAthleteCommand LOGIC_COLOR
participant "Command\nResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "Model" as Model MODEL_COLOR
end box

' ==== Sequence Flow ====
[-> LogicManager : execute("add-a n/LeBron James s/Basketball\na/40 p/98765432 e/james@example.com")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("add-a n/LeBron James s/Basketball\na/40 p/98765432 e/james@example.com")
activate AddressBookParser

ref over AddressBookParser, AddAthleteCommandParser, AddAthleteCommand
  parse details and build AddAthleteCommand
end ref

AddressBookParser --> LogicManager : command
deactivate AddressBookParser
destroy AddressBookParser

LogicManager -> AddAthleteCommand : execute(m)
activate AddAthleteCommand

AddAthleteCommand -> Model : hasAthlete(toAdd)?
activate Model

Model --> AddAthleteCommand : boolean
deactivate Model

alt athlete does not exist
    AddAthleteCommand -> Model : addAthlete(toAdd)
    activate Model
    Model --> AddAthleteCommand
    deactivate Model

    create CommandResult
    AddAthleteCommand -> CommandResult
    activate CommandResult
    CommandResult --> AddAthleteCommand
    deactivate CommandResult
    destroy CommandResult
else athlete already exists
    AddAthleteCommand -> AddAthleteCommand : throw CommandException
end

AddAthleteCommand --> LogicManager : result / exception
deactivate AddAthleteCommand
destroy AddAthleteCommand

[<-- LogicManager
deactivate LogicManager
destroy LogicManager
@enduml
