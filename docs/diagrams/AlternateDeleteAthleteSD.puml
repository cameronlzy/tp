@startuml
!include style.puml

' ==== Font & Layout Settings ====
' Balanced for readability and compactness
skinparam defaultFontSize 15
skinparam sequenceMessageFontSize 15
skinparam participantFontSize 17
skinparam noteFontSize 14
skinparam sequenceLifeLineFontSize 14
skinparam ArrowFontStyle plain

' Layout compression and width control
skinparam maxMessageSize 55
skinparam ParticipantPadding 10
skinparam BoxPadding 8
scale 1.0

' ==== Participants ====
box Logic LOGIC_COLOR_T1
participant "Logic\nManager" as LogicManager LOGIC_COLOR
participant "AddressBook\nParser" as AddressBookParser LOGIC_COLOR
participant "DeleteAthlete\nCommandParser" as DeleteAthleteCommandParser LOGIC_COLOR
participant "DeleteAthlete\nCommand" as DeleteAthleteCommand LOGIC_COLOR
participant "Command\nResult" as CommandResult LOGIC_COLOR
end box

box Model MODEL_COLOR_T1
participant "Model" as Model MODEL_COLOR
end box

' ==== Sequence Flow ====
[-> LogicManager : execute("delete-a n/LeBron\ns/Basketball")
activate LogicManager

LogicManager -> AddressBookParser : parseCommand("delete-a n/LeBron\ns/Basketball")
activate AddressBookParser

ref over AddressBookParser, DeleteAthleteCommandParser, DeleteAthleteCommand
  parse details and build DeleteAthleteCommand
end ref

AddressBookParser --> LogicManager : command
deactivate AddressBookParser
destroy AddressBookParser

LogicManager -> DeleteAthleteCommand : execute(m)
activate DeleteAthleteCommand

DeleteAthleteCommand -> Model : getFilteredAthleteList()
activate Model
Model --> DeleteAthleteCommand : lastShownList
deactivate Model

alt athlete exists
    DeleteAthleteCommand -> Model : deleteAthlete(athleteToDelete)
    activate Model
    Model --> DeleteAthleteCommand
    deactivate Model

    create CommandResult
    DeleteAthleteCommand -> CommandResult
    activate CommandResult
    CommandResult --> DeleteAthleteCommand
    deactivate CommandResult
    destroy CommandResult
else athlete does not exist
    DeleteAthleteCommand -> DeleteAthleteCommand : throw CommandException
end

DeleteAthleteCommand --> LogicManager : result / exception
deactivate DeleteAthleteCommand
destroy DeleteAthleteCommand

[<-- LogicManager
deactivate LogicManager
destroy LogicManager
@enduml
